{
  "name": "backend",
  "version": "1.0.0",
  "description": "Express backend for video captioning",
  "main": "dist/server.js",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc && mkdir -p dist/remotion && cp -r src/remotion/* dist/remotion/",
